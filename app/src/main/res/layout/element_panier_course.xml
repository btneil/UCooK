<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/couleur_fond"
    android:id="@+id/layout_affichage_ing">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="370dp"
        android:layout_height="79dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <CheckBox
            android:id="@+id/titre_ing"
            android:layout_width="223dp"
            android:layout_height="51dp"
            android:fontFamily="@font/vollkornsc_regular"
            android:text="IngrÃ©dient: "
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/qte"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:fontFamily="@font/vollkornsc_regular"
            android:gravity="center"
            android:text="Qte: "
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/titre_ing"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Supp_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/vollkornsc_bold"
            android:rotation="30"
            android:text=""
            android:textColor="#991218"
            android:textSize="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/qte"
            app:layout_constraintEnd_toEndOf="@+id/titre_ing"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/qte" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>